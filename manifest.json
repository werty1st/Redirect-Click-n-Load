{
    "description": "Redirect Click'n'Load to remote pyload or jDownloader",
    "manifest_version": 2,
    "name": "Redirect Click'n'Load",
    "author": "Ronny Adams",

    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_icon": {
            "128": "images/icon.png"
        },
        "default_title": "Click'n'Load Request Proxy"
    },
    "icons": {
        "128": "images/icon.png"
    },
    "permissions": [
        "*://*/*",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "version": "1.2.3"
}